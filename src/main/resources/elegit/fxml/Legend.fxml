<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<GridPane hgap="10"
          vgap="30"
          alignment="TOP_CENTER">

    <padding>
        <Insets top="10" bottom="10" right="10" left="10"/>
    </padding>

    <!-- Fill Legend Text -->
    <HBox GridPane.rowSpan="1"
          GridPane.rowIndex="0"
          GridPane.columnIndex="0"
          alignment="CENTER"
          spacing="10">
        <Text   text="Fill Legend"
                style="-fx-font-weight: bold; -fx-font-size: 16"/>
    </HBox>

    <!-- Solid Fill -->
    <HBox GridPane.columnIndex="0"
          GridPane.rowIndex="1"
          GridPane.rowSpan="1"
          alignment="CENTER_LEFT"
          spacing="10">
        <Polygon    id="helpButton"
                    points="0,30,30,30,15,0"/>
        <Circle radius="15.0"
                id="helpButton"/>
        <Text text="A commit tracked locally but not remotely"/>
    </HBox>

    <!-- Hollow Fill -->
    <HBox GridPane.columnIndex="0"
          GridPane.rowIndex="2"
          GridPane.rowSpan="1"
          alignment="CENTER_LEFT"
          spacing="10">
        <Polygon    id="helpButton-remote"
                    points="0,30,30,30,15,0"/>
        <Circle radius="15.0"
                id="helpButton-remote"/>
        <Text text="A commit tracked remotely but not locally"/>
    </HBox>

    <!-- Combo Fill -->
    <HBox GridPane.columnIndex="0"
          GridPane.rowIndex="3"
          GridPane.rowSpan="1"
          alignment="CENTER_LEFT"
          spacing="10">
        <StackPane>
            <Polygon id="helpButton-both"
                     points="0,30,30,30,15,0">
            </Polygon>
        </StackPane>
        <StackPane>
            <Circle id="helpButton-both"
                    radius="15"/>
        </StackPane>
        <Text text="A commit tracked locally and remotely"/>
    </HBox>

    <!-- Fill Legend and Shape Legend Separator -->
    <VBox   GridPane.rowSpan="4"
            GridPane.columnIndex="1"
            id="separator"
            prefWidth="2">
        <GridPane.margin>
            <Insets top="-5" left="15" right="15" bottom="-10"/>
        </GridPane.margin>
    </VBox>

    <!-- Shape Legend Text -->
    <HBox GridPane.rowSpan="1"
          GridPane.rowIndex="0"
          GridPane.columnIndex="2"
          alignment="CENTER"
          spacing="10">
        <Text   text="Shape Legend"
                style="-fx-font-weight: bold; -fx-font-size: 16"/>
    </HBox>

    <!-- Square -->
    <HBox GridPane.columnIndex="2"
          GridPane.rowIndex="1"
          GridPane.rowSpan="1"
          alignment="CENTER_LEFT"
          spacing="10">
        <!--<Rectangle  height="30"
                    width="30"
                    style="-fx-fill: lightslategrey"/>-->
        <Circle radius="15.0"
                style="-fx-fill: lightslategrey"/>
        <Text text="A commit that is not a branch head"/>
    </HBox>

    <!-- Triangle -->
    <HBox GridPane.columnIndex="2"
          GridPane.rowIndex="2"
          GridPane.rowSpan="1"
          alignment="CENTER_LEFT"
          spacing="10">
        <Polygon points="0,30,30,30,15,0"
                 style="-fx-fill: lightslategrey"/>
        <Text text="A commit that is a branch head"/>
    </HBox>



<stylesheets>
    <URL value="@../css/BaseStyle.css"/>
</stylesheets>
</GridPane>

