<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Dropdown, open in file manager, plus and minus buttons -->

<HBox spacing="5" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="elegit.controllers.DropdownController">

        <Button id="loadNewRepoButton" fx:id="loadNewRepoButton" onAction="#handleLoadNewRepoButton">
            <contextMenu>
                <ContextMenu fx:id="newRepoOptionsMenu">
                    <items>
                        <MenuItem fx:id="cloneOption" onAction="#handleCloneNewRepoOption" text="Clone repository" />
                        <MenuItem id="loadExistingRepoOption" fx:id="existingOption" onAction="#handleLoadExistingRepoOption" text="Load existing repository" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </Button>
        <Button id="removeRecentReposButton" fx:id="removeRecentReposButton" onAction="#chooseRecentReposToDelete" />
   <VBox minHeight="-Infinity" minWidth="-Infinity" prefWidth="115.0" spacing="3.0">
      <children>
         <Label text="Load Repository:">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
              <ComboBox id="repoDropdown" fx:id="repoDropdownSelector" minHeight="-Infinity" onAction="#loadSelectedRepo" prefHeight="25.0" promptText="Repository" />
      </children>
   </VBox>

        <Button id="openRepoDirButton" fx:id="openRepoDirButton" onAction="#openRepoDirectory" />
    </HBox>
