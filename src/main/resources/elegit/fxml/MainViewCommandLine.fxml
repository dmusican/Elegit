<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<!-- Elegit actions as terminal commands and a menu button for this feature -->

<HBox alignment="CENTER_LEFT" spacing="5.0" stylesheets="@../css/BaseStyle.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="elegit.controllers.CommandLineController">
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Terminal Command:" textAlignment="CENTER" />
   <ScrollPane id="commandBar" maxHeight="-Infinity" minHeight="-Infinity" pickOnBounds="false" prefHeight="45.0" prefWidth="200.0" vbarPolicy="NEVER" HBox.hgrow="NEVER">
      <content>
         <TextArea id="command" fx:id="currentCommand" blendMode="HARD_LIGHT" mouseTransparent="true" editable="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="31.0" prefWidth="500.0" />
      </content>
   </ScrollPane>
    <Button id="commandLineMenuButton" fx:id="commandLineMenuButton" onAction="#handleCommandLineMenuButton">
        <contextMenu>
            <ContextMenu fx:id="commandLineMenu">
                <items>
                    <MenuItem id="disableOption" fx:id="disableOption" onAction="#handleDisableOption" text="Disable terminal commands" />
                    <MenuItem id="seeHistoryOption" fx:id="seeHistoryOption" onAction="#handleSeeHistoryOption" text="See full history" />
                    <MenuItem id="exportHistoryOption" fx:id="exportHistoryOption" onAction="#handleExportHistoryOption" text="Export history to a .txt file" />
                    <MenuItem id="clearLogOption" fx:id="clearLogOption" onAction="#handleClearLogOption" text="Clear command history" />
                </items>
            </ContextMenu>
        </contextMenu>
    </Button>
</HBox>
